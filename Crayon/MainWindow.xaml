<?xml version="1.0" encoding="utf-8"?>
<Window
  x:Class="Crayon.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:Crayon"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  Title="Crayon">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Drop="Grid_Drop" DragOver="Grid_DragOver">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar" Height="48" Grid.Row="0">
            <Grid.Background>
                <SolidColorBrush Color="{ThemeResource SubtleFillColorSecondary}" />
            </Grid.Background>

            <SelectorBar x:Name="MySelectorBar"
                 SelectionChanged="MySelectorBar_SelectionChanged">
                <SelectorBarItem x:Name="SelectorBarItemPage1" Icon="Edit" Text="Color" Tag="Color" IsSelected="True" />
                <SelectorBarItem x:Name="SelectorBarItemPage2" Icon="Favorite" Text="Icon" Tag="Icon" />
            </SelectorBar>
            
        </Grid>
        <StackPanel Padding="24" Spacing="20" Grid.Row="1">

            <InfoBar x:Name="MyInfoBar"
                     Severity="Informational"
                     Title="Error 0"
                     Message="Error message."
                     IsClosable="False"
                     IsOpen="False" />
            
            <StackPanel x:Name="Tab1Content" Visibility="Visible">
                <ItemsControl x:Name="ColorsList" ItemsSource="{x:Bind AvailableColors}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VariableSizedWrapGrid Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <RadioButton GroupName="Colors" Checked="Color_Checked" Margin="4" Padding="0" Background="Transparent" BorderThickness="0">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="RadioButton">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </RadioButton.Template>
                                <Ellipse x:Name="Circle"
                    Width="32" Height="32"
                    StrokeThickness="2">
                                    <Ellipse.Fill>
                                        <SolidColorBrush Color="{Binding Color}" />
                                    </Ellipse.Fill>
                                    <Ellipse.Stroke>
                                        <SolidColorBrush Color="Transparent" />
                                    </Ellipse.Stroke>
                                </Ellipse>
                            </RadioButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <StackPanel x:Name="Tab2Content" Visibility="Collapsed">
                <TextBlock Text="N/A" Margin="10" FontSize="18"/>
            </StackPanel>

            <TextBlock x:Name="SelectedText" Text="You've selected the colorâ€”none." />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                <Button x:Name="ApplyButton" Content="Apply" Click="ApplyButton_Click" />
                <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
